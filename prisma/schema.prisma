generator client {
   provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id          String       @id @default(cuid())
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  users       UsersOnCustomers[]
  refreshTokens RefreshToken[]
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  totpSecret  String?      // for TOTP 2FA
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  customers   UsersOnCustomers[]
  refreshTokens RefreshToken[]
}

model UsersOnCustomers {
  userId      String
  customerId  String
  role        String       @default("user")
  createdAt   DateTime     @default(now())

  user        User         @relation(fields: [userId], references: [id])
  customer    Customer     @relation(fields: [customerId], references: [id])

  @@id([userId, customerId]) // composite primary key
}

model RefreshToken {
  id         String   @id @default(cuid())
  token      String   // store hashed token for security
  userId     String
  customerId String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  revoked    Boolean  @default(false) // mark token invalid if rotated/revoked
  replacedBy String?  

  user        User         @relation(fields: [userId], references: [id])
  customer    Customer     @relation(fields: [customerId], references: [id])

  @@index([userId])
  @@index([token])
}
    